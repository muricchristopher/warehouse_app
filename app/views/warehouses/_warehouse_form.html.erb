<%= form_with model: @warehouse, local: true, data: { turbo: false }  do |f| %>
<div>
    <%= f.label :name, class:"form-label"%>
    <%= f.text_field :name , placeholder:"Galpão São Paulo", class:"form-control form-control-lg mb-3" %>
  </div>
  <div>
    <%= f.label :description, class:"form-label" %>
    <%= f.text_area :description , placeholder:"Um belo galpão em São Paulo", class:"form-control form-control-lg mb-3 " %>
  </div>
  <div>
    <%= f.label :address, class:"form-label" %>
    <%= f.text_field :address, placeholder: "Rua Marechal Tito, 2000", class:"form-control form-control-lg mb-3 " %>
  </div>
    <div>
      <%= f.label :code, class:"form-label" %>
      <%= f.text_field :code, placeholder:"Ex: GSP", class:"form-control form-control-lg mb-3" %>
    </div>
  <div>
    <%= f.label :city, class:"form-label" %>
    <%= f.text_field :city, placeholder:"São Paulo", class:"form-control form-control-lg mb-3" %>
  </div>
  <div>
    <%= f.label :area, class:"form-label" %>
    <%= f.number_field :area, placeholder:"Ex: 2000", class:"form-control form-control-lg mb-3" %>
  </div>
  <div>
    <%= f.label :zip_code, class:"form-label" %>
    <%= f.text_field :zip_code, placeholder:"Ex: 08140-400", class:"form-control fs-5"  %>
  </div>
  <div class="form-buttons d-flex gap-2 mt-4 flex-row-reverse">
  <%= f.submit 'Salvar', class:"btn btn-outline-success btn-lg"%>
<%end%>

<%= button_to 'Voltar', root_path, method: :get, class:"btn btn-outline-danger btn-lg" %>
</div>
