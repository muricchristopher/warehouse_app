<% if @errors %>
<div class="alert alert-danger">

  <% @errors.each do |error| %>
    <p><%= error %></p>
  <% end %>
  </div>

<% end %>

<%= form_with model: @warehouse, local: true, data: { turbo: false }  do |f| %>  <div>
    <%= f.label :name %> <br/>
    <%= f.text_field :name , placeholder:"Galpão São Paulo" %>
  </div>
  <div>
    <%= f.label :description %> <br/>
    <%= f.text_area :description , placeholder:"Um belo galpão em São Paulo" %>
  </div>
  <div>
    <%= f.label :address %> <br/>
    <%= f.text_field :address, placeholder: "Rua Marechal Tito, 2000" %>
  </div>
    <div>
      <%= f.label :code %> <br/>
      <%= f.text_field :code, placeholder:"Ex: GSP" %>
    </div>
  <div>
    <%= f.label :city %> <br/>
    <%= f.text_field :city, placeholder:"São Paulo" %>
  </div>
  <div>
    <%= f.label :area %> <br/>
    <%= f.number_field :area, placeholder:"Ex: 2000" %>
  </div>
  <div>
    <%= f.label :zip_code %> <br/>
    <%= f.text_field :zip_code, placeholder:"Ex: 08140-  400"  %>
  </div>
  <%= f.submit 'Salvar'%>
<%end%>

