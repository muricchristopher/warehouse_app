<h1>Cadastrar Pedido</h1>
<% if @errors %>
<div class="alert alert-danger">

  <% @errors.each do |error| %>
    <p><%= error %></p>
  <% end %>
  </div>

<% end %>

<%= form_for @order, data: { turbo: false }  do |f| %>
  <div class="form-group mb-3">
    <%= f.label :warehouse_id , class:"form-label"%>
     <%= f.collection_select(:warehouse_id, Warehouse.all, :id, :name, {:prompt=>true}, {:class=>'form-select'}) %>
  </div>
    <div class="form-group mb-3">
    <%= f.label :supplier_id, class:"form-label" %>
    <%= f.collection_select(:supplier_id, Supplier.all, :id, :corporate_name, {:prompt=>true}, {:class=>'form-select'}) %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :estimated_delivery_date, class:"form-label" %>
    <%= f.date_select(:estimated_delivery_date, {}, {:class => 'form-select'}) %>


  <%= f.submit 'Cadastrar', class:"btn btn-primary mt-3" %>

<% end %>

<br><br>

