<div class="navigation d-flex justify-content-between align-content-center gap-3 ps-5 pe-5 border border-1">

  <div class="section-title">
    <h1 class="text-black mt-2 fs-2">Galpões</h1>
  </div>

    <%= button_to('Cadastrar Galpão', new_warehouse_path,
            method: "get", class:"btn btn-outline-primary btn-lg") %>
</div>


<div class="content mt-4 d-flex ">
  <div class="row">
  <% @warehouses.each do |w| %>
    <div class="col ">
    <div class="card mb-3" style="width: 18rem;">
          <div class="card-body">
            <h3 class="card-title"><%= link_to w.name, warehouse_path(w.id) %></h3>
            <p class="card-text">
              <strong>Código</strong>: <%= w.code %> <br>
              <strong>Cidade</strong>: <%= w.city %> <br>
              <strong>Área</strong>: <%= w.area %>m²
            </p>
              <%= link_to 'Ver detalhes', warehouse_path(w.id), class:"btn btn-outline-primary"%>
          </div>
        </div>
    </div>

  <%end%>



<% if(@warehouses.empty?)%>
  <p>Nenhum galpão cadastrado!</p>
<% end %>
  </div>



