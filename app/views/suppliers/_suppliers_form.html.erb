<% if @errors %>
<div class="alert alert-danger">

  <% @errors.each do |error| %>
    <p><%= error %></p>
  <% end %>
  </div>

<% end %>

<%= form_with model: @supplier, local: true, data: { turbo: false }  do |f| %>  <div>
    <%= f.label :corporate_name %>
    <%= f.text_field :corporate_name , placeholder:"Nome da Empresa" %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description , placeholder:"Um belo galpão em São Paulo" %>
  </div>
  <div>
        <%= f.label :address %>
        <%= f.text_field :address, placeholder: "Rua Marechal Tito, 2000" %>
      </div>
      <div>
        <%= f.label :code %>
        <%= f.text_field :code, placeholder:"Ex: GSP" %>
      </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city, placeholder:"São Paulo" %>
  </div>
  <div>
    <%= f.label :area %>
    <%= f.number_field :area, placeholder:"Ex: 2000" %>
  </div>
  <div>
    <%= f.label :cep %>
    <%= f.text_field :cep, placeholder:"Ex: 08140-  400"  %>
  </div>
  <%= f.submit 'Salvar'%>
<%end%>

<%= link_to 'Voltar', root_path %>

