<%= form_with model: @supplier, local: true, data: { turbo: false }  do |f| %>

  <div>
    <%= f.label :corporate_name, class:"form-label" %>
    <%= f.text_field :corporate_name , placeholder:"BRA Produções Limitadas LITDA", class:"form-control form-control-lg mb-3" %>
  </div>
  <div>
    <%= f.label :brand_name, class:"form-label" %>
    <%= f.text_field :brand_name , placeholder:"BRA Produções", class:"form-control form-control-lg mb-3" %>
  </div>
  <div>
    <%= f.label :registration_number, class:"form-label" %>
    <%= f.text_field :registration_number , placeholder:"109.210.012/00001-89", class:"form-control form-control-lg mb-3" %>
  </div>
  <div>
    <%= f.label :full_address, class:"form-label" %>
      <%= f.text_field :full_address, placeholder: "Rua Marechal Tito, 2000", class:"form-control form-control-lg mb-3" %>
  </div>
      <div>
        <%= f.label :city, class:"form-label" %>
        <%= f.text_field :city, placeholder:"Guarulhos", class:"form-control form-control-lg mb-3" %>
      </div>
  <div>
    <%= f.label :state, class:"form-label" %>
    <%= f.text_field :state, placeholder:"São Paulo", class:"form-control form-control-lg mb-3" %>
  </div>
  <div>
    <%= f.label :email, class:"form-label" %>
    <%= f.text_field :email, placeholder:"consultoria@braprodcoes.com.br", class:"form-control form-control-lg mb-3" %>
  </div>
  <div class="form-buttons d-flex gap-2 mt-4">
    <%= f.submit 'Salvar', class:"btn btn-outline-success btn-lg"%>
<%end%>

<%= button_to 'Voltar', suppliers_path, method: :get, class:"btn btn-outline-danger btn-lg" %>
</div>
