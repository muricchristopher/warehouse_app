<h2>Entrar</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>

  <div class="field">
    <%= f.label :email, class:"form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg mb-2" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"form-label"  %>
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control form-control-lg mb-2"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-2">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me, class:"form-label" %>
    </div>
  <% end %>

  <div class="actions mb-2">
    <%= f.submit "Fazer Login", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
